#!/bin/bash

#/ NAME
#/     build vagrant -- builds a vagrant box
#/
#/ SYNOPSIS
#/   bin/build vagrant
#/
#/ EXAMPLES
#/     $ bin/build vagrant

# figure out the project root under which bin, lib live
shome="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"

# load a jason bourne library
source "$shome/libexec/_jason"
require awsme
require build

# entry point
function main {
  local opt_ssh=

  if [[ "$FLAGS_sshagent" = "$FLAGS_TRUE" ]]; then
    opt_ssh="$opt_ssh -A"
  fi

  time build_vagrant
}

function until_vm {
  local wanted="$1"; shift

  while true; do
    local current_state="$(vbox_state "$id_instance")"
    if [[ "$current_state" = "$wanted" ]]; then
      echo
      break
    fi
    echo "."
    sleep 5
  done
}

function until_port_open {
  local wanted="$1"; shift

  while true; do
    if nc -z "localhost" "$wanted"; then
      echo
      break
    fi
    echo "."
    sleep 5
  done
}

function forwarded_ssh_port {
  VBoxManage showvminfo "$id_instance" --machinereadable | awk '$1 ~ /^Forwarding\(.*?,22"/ { split($1,a,","); print a[4] }'
}

function clean_vm {
  touch $shome/vagrant.sh
  bundle exec vagrant destroy -f
}

function build_vagrant {
  cd $shome

  local id_instance

  bundle exec vagrant box remove awsme || true
  bundle exec vagrant box add awsme boxes/precise-server-cloudimg-amd64-vagrant-disk1.box
  clean_vm

  # bootstrap
  ln -nfs bootstrap/bootstrap.sh vagrant.sh
  bundle exec vagrant up

  id_instance="$(bundle exec ruby -e 'require "json"; puts JSON.load(File.read(".vagrant"))["active"]["default"]')"

  until_vm "poweroff"

  # guest additions
  ln -nfs bootstrap/guest_additions.sh vagrant.sh
  bundle exec vagrant up
  until_vm "poweroff"

  # bundling
  ln -nfs bootstrap/finished.sh vagrant.sh
  bundle exec vagrant up
  until_vm "running"
  until_port_open "$(forwarded_ssh_port)"
  bundle exec vagrant package
  mv package.box boxes/awsme.box
  bundle exec vagrant box remove awsme || true
  bundle exec vagrant box add awsme boxes/awsme.box

  clean_vm

  # boot up new box
  bundle exec vagrant up
  id_instance="$(bundle exec ruby -e 'require "json"; puts JSON.load(File.read(".vagrant"))["active"]["default"]')"
  until_vm "running"
  time until_port_open "$(forwarded_ssh_port)"
  bundle exec vagrant ssh
}

require sub "$BASH_SOURCE" "$@"
