#!/bin/bash

#/ NAME
#/     build vagrant -- builds a vagrant box
#/
#/ SYNOPSIS
#/   bin/build vagrant
#/
#/ EXAMPLES
#/     $ bin/build vagrant

# figure out the project root under which bin, lib live
shome="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"

# load a jason bourne library
source "$shome/libexec/_jason"
require awsme
require build

# entry point
function main {
  local opt_ssh=

  if [[ "$FLAGS_sshagent" = "$FLAGS_TRUE" ]]; then
    opt_ssh="$opt_ssh -A"
  fi

  time build_vagrant
}

function wait_for {
  local wanted="$1"; shift

  while true; do
    local current_state="$(vbox_state "$id_instance")"
    if [[ "$current_state" = "$wanted" ]]; then
      echo
      break
    fi
    echo "."
    sleep 5
  done
}

function build_vagrant {
  bundle exec vagrant destroy -f
  ln -nfs bootstrap/bootstrap.sh vagrant.sh
  bundle exec vagrant up

  local id_instance="$(bundle exec ruby -e 'require "json"; puts JSON.load(File.read(".vagrant"))["active"]["default"]')"

  wait_for "poweroff"
  ln -nfs bootstrap/guest_additions.sh vagrant.sh
  bundle exec vagrant up

  wait_for "poweroff"
  ln -nfs bootstrap/finished.sh vagrant.sh
  bundle exec vagrant up

  wait_for "running"
  bundle exec vagrant ssh

  rm -f vagrant.sh
}

require sub "$BASH_SOURCE" "$@"
